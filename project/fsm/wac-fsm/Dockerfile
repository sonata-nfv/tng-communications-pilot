FROM python:3.4-slim
MAINTAINER SONATA

RUN apt-get update && apt-get install -y python-pip ssh && \
pip install paramiko
RUN apt-get install python2.7
RUN apt-get install -y net-tools iproute2 iputils-ping

# configrurations
ENV broker_host amqp://guest:guest@broker:5672/%2F
ENV broker_exchange son-kernel

ADD wac-fsm /root
COPY sandbox.pem /root/wac/
RUN chmod 400 /root/wac/sandbox.pem

WORKDIR /root/base/son-mano-base
RUN python setup.py install

WORKDIR /root/base/sm-base
RUN python setup.py install

WORKDIR /root
RUN python setup.py install

CMD ["wac"]
